<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/create_title"
        layout="@layout/layout_titlebar" />

    <FrameLayout
        android:id="@+id/fl_create"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/create_title">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:padding="5dip">

            <TableRow
                android:layout_marginTop="10dp">

                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:id="@+id/ll_scene_step_baseInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_btn_green_blue">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/iv_icon0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:text="基本信息"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>

                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:id="@+id/ll_scene_step_prospecting"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_btn_yellow">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/iv_icon1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/pg1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:text="接勘"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>


                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:id="@+id/ll_scene_step_visit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_btn_orange">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:text="现场访问"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>

            </TableRow>

            <TableRow
                android:layout_marginTop="15dp">

                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:id="@+id/ll_scene_step_figure"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_btn_blue">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:text="现场图"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>

                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:id="@+id/ll_scene_step_photo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_btn_blue_light"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg4" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center_horizontal"
                            android:text="现场照片"
                            android:textColor="@color/white"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>

                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:id="@+id/ll_scene_step_evidence"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_btn_pink"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center_horizontal"
                            android:text="痕迹物证"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>

            </TableRow>

            <TableRow
                android:layout_marginTop="15dp">

                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:id="@+id/ll_scene_step_situation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_btn_gray">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg6" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:text="勘验情况"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>

                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:id="@+id/ll_scene_step_opinion"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_btn_green"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg7" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:text="分析意见"
                            android:textColor="@color/white"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>

                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:id="@+id/ll_scene_step_witness"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_btn_green_blue">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg8"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:text="见证人"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>

            </TableRow>

            <TableRow
                android:layout_marginTop="10dp">

                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:id="@+id/ll_scene_extract"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_btn_orange">

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg10"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:text="提取物品"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>

                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:visibility="visible"
                    android:id="@+id/ll_scene_step_collection"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_btn_blue_light">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/ll_collection"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/pg9"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:text="Wifi采集"
                                android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>


                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>



                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:id="@+id/ll_scene_step_video"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_btn_blue">

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/ll_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:text="视频攻略"
                            android:textColor="@color/white"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>


            </TableRow>

            <TableRow
                android:layout_marginTop="10dp">
                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:id="@+id/ll_scene_station_collection"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_btn_green_blue">

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/ll_startcollection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg11" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:text="基站采集"
                            android:textColor="@color/white"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_loading"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ProgressBar
                            android:visibility="visible"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:indeterminateDrawable="@drawable/loading"/>
                        <TextView
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:text="采集中"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>

                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_btn_blue">

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:text="视频攻略"
                            android:textColor="@color/white"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>

                <com.liany.csiclient.widget.badge.BadgeRelativeLayout
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="85dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_btn_blue">

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/pg12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:text="视频攻略"
                            android:textColor="@color/white"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </com.liany.csiclient.widget.badge.BadgeRelativeLayout>
            </TableRow>


        </TableLayout>
    </FrameLayout>

</LinearLayout>