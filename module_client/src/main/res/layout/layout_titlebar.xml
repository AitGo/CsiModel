<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/iv_title_back"
        android:layout_width="40dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/btn_back_mini"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/iv_title_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@mipmap/setting"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_title_img_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_title_camera_right"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@mipmap/pic_image_title"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_title_camera_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_title_confirm"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@mipmap/camera"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/iv_title_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@mipmap/btn_finish"
        android:visibility="gone"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_title_confirm"
        android:background="@mipmap/collect"/>

    <ImageView
        android:id="@+id/iv_title_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/camera"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_title_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_title_camera"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@mipmap/scan"
        android:visibility="gone"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_title_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="@mipmap/update"
        android:layout_toLeftOf="@id/iv_title_confirm"
        android:layout_centerVertical="true"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_title_search_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@mipmap/reflash" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_title_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@mipmap/addwhite" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_title_add1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_title_search_wifi"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@mipmap/addwhite" />

    <ImageView
        android:id="@+id/iv_title_opinionsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@mipmap/opinionsearch"
        android:visibility="gone"/>

</RelativeLayout>